<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/id_rl_setpass_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/id_img_setpass_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_login_lock" />

        <EditText
            android:id="@+id/id_edit_setpass_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/id_img_setpass_one"
            android:background="@null"
            android:hint="请重新输入密码"
            android:inputType="textPassword"
            android:textColor="#000"
            android:textColorHint="#d9d6d6"
            android:textSize="19dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/id_img_setpass_one"
            android:layout_marginTop="20dp"
            android:background="@drawable/line" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/id_rl_setpass_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/id_img_setpass_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_login_lock" />

        <EditText
            android:id="@+id/id_edit_setpass_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/id_img_setpass_two"
            android:background="@null"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:textColor="#000"
            android:textColorHint="#d9d6d6"
            android:textSize="19dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/id_img_setpass_two"
            android:layout_marginTop="20dp"
            android:background="@drawable/line" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_rl_setpass_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/id_btn_setpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape"
            android:text="确认并登录"
            android:textSize="25sp" />

    </RelativeLayout>


</LinearLayout>