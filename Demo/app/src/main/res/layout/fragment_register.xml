<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/custom_number" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <RelativeLayout
            android:id="@+id/fr_rl_permphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/fr_iv_perm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_login_perm" />

            <EditText
                android:id="@+id/fr_et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fr_iv_perm"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:textColor="#000"
                android:textColorHint="#d9d6d6"
                android:textSize="19dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/fr_iv_perm"
                android:layout_marginTop="20dp"
                android:background="@drawable/line" />

        </RelativeLayout>


        <RelativeLayout

            android:id="@+id/fr_rl_keycode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fr_rl_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_code" />


            <EditText
                android:id="@+id/fr_et_entercode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/fr_rl_key"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textColor="#000"
                android:textColorHint="#d9d6d6"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/fr_tv_getcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="15dp"
                android:text="获取验证码"
                android:textColor="#d9d6d6"
                android:textSize="19dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/fr_tv_getcode"
                android:src="@drawable/ic_vertical" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/fr_rl_key"
                android:layout_marginTop="20dp"
                android:background="@drawable/line" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/fr_rl_lockpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fr_iv_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_login_lock" />

            <EditText
                android:id="@+id/fr_et_enterpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/fr_iv_lock"
                android:background="@null"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textColorHint="#d9d6d6"
                android:textSize="19dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/fr_iv_lock"
                android:layout_marginTop="20dp"
                android:background="@drawable/line" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fr_rl_verfitylogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/fr_btn_verifylogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape"
                android:text="验证并登录"
                android:textSize="25sp" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/fr_ll_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/fr_cb_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="#13ae34" />

            <!--<ImageView-->
            <!--android:id="@+id/fr_iv_box"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="-5dp"-->
            <!--android:paddingRight="6dp"-->
            <!--android:src="@drawable/ic_box_normal" />-->

            <TextView
                android:id="@+id/fr_tv_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已同意并阅读 "
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/fr_tv_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="《共团贸易用户协议》"
                android:textColor="#ca0a0a"
                android:textSize="17sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>